@using EnglishExam.ViewModels;
@using EnglishExam.Models;
@model SolveViewModel;
@{
    ViewData["Title"] = "SolveExam";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@{var elegants = new List<SelectListItem>
{

    new SelectListItem
    {Text="A",Value= "A" ,Selected=true},
    new SelectListItem
    { Text="B",Value= "B"},
    new SelectListItem
    {Text="C",Value= "C"},
    new SelectListItem
    { Text="D",Value= "D"},
    };

}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Sınav Çöz</h1>
</div>

<div class="row g-5">
    <div class="col-md-12">
        <form method="post" action="/Exam/SolveExam">
          

            <div class="form-horizantal">
                <div class="py-5 ">
                    @foreach (var ex in Model.Exams)
                    {
                        <h2>@ex.Title</h2>
                        <div class="lead">
                            @ex.Content
                        </div>
                    }
                
                    @foreach (var item in Model.Questions)
                    {
                <div class="col-6" style="margin-top:10px;">
                    <tr><td><strong>Soru-)</strong>@item.QuestionContent</td></tr>
                    <tr>


                        <select>
                            <option>
                        <td><strong>A-)</strong> @item.A</td></option>
                        <option>
                        <td><strong>B-)</strong>@item.B</td></option>
                        <option>
                        <td><strong>C-)</strong>@item.C</td>
                        </option>

                        <option>
                        <td><strong>D-)</strong>@item.D</td></option>

                        </select>

                    </tr>
                </div>
                            }
                        
                    </div>
            </div>
        </form>

    </div>
</div>


@section _pageScript{

    <script src="~/assets/ckeditor/ckeditor.js"></script>

    <script>

        if (CKEDITOR.env.ie && CKEDITOR.env.version < 9)
            CKEDITOR.tools.enableHtml5Elements(document);

        // The trick to keep the editor in the sample quite small
        // unless user specified own height.
        CKEDITOR.config.height = 150;
        CKEDITOR.config.width = 'auto';

        var initSample = (function () {
            var wysiwygareaAvailable = isWysiwygareaAvailable(),
                isBBCodeBuiltIn = !!CKEDITOR.plugins.get('bbcode');

            return function () {

                var elements = CKEDITOR.document.find('.ckeditorshow'),
                    i = 0,
                    element;

                while ((editorElement = elements.getItem(i++))) {

                    // :(((
                    if (isBBCodeBuiltIn) {
                        editorElement.setHtml(
                            'Hello world!\n\n' +
                            'I\'m an instance of [url=https://ckeditor.com]CKEditor[/url].'
                        );
                    }
                    if (wysiwygareaAvailable) {
                        CKEDITOR.replace('editor');
                    } else {
                        editorElement.setAttribute('contenteditable', 'true');
                        CKEDITOR.inline('editor');
                    }

                    CKEDITOR.inline(editorElement);
                }



            };

            function isWysiwygareaAvailable() {
                // If in development mode, then the wysiwygarea must be available.
                // Split REV into two strings so builder does not replace it :D.
                if (CKEDITOR.revision == ('%RE' + 'V%')) {
                    return true;
                }

                return !!CKEDITOR.plugins.get('wysiwygarea');
            }
        })();

    </script>
}
